@{
    ViewBag.Title = "SponsorRegistration";
    Layout = "~/Views/Shared/home_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Sponsor Registration Form</title>
</head>
<body ng-controller="SponsorRegistrationFormCtrl">
    <div class="col-md-12">
        <h3>Sponsor Registration Form</h3>
        <span></span>
        <form name="Sponsorregform" autocomplete="off">

            <div class="col-md-12" ng-class="{ 'has-error' : Sponsorregform.BusinessName.$error.required && !Sponsorregform.BusinessName.$pristine }">
                <label class="col-lg-2">Business Name<span style="color: red;">*</span></label>
                <div class="col-lg-3">
                    <div class="form-group">
                        <input class="form-control" type="text" name="BusinessName" ng-model="SponsorInfo.BusinessName" placeholder="Business Name" characters-only required />
                    </div>
                </div>
            </div>
            <div class="col-md-12" ng-class="{ 'has-error' : Sponsorregform.FirstName.$error.required && !Sponsorregform.FirstName.$pristine }">
                <label class="col-lg-2">First Name<span style="color: red;">*</span></label>
                <div class="col-lg-3">
                    <div class="form-group">
                        <input class="form-control" type="text" name="FirstName" ng-model="SponsorInfo.FirstName" placeholder="First Name" characters-only required />
                    </div>
                </div>
            </div>
            <div class="col-md-12" ng-class="{ 'has-error' : Sponsorregform.LastName.$error.required && !Sponsorregform.LastName.$pristine }">
                <label class="col-lg-2">Last Name<span style="color: red;">*</span></label>
                <div class="col-lg-3">
                    <div class="form-group">
                        <input class="form-control" type="text" name="LastName" ng-model="SponsorInfo.LastName" placeholder="Last Name" characters-only required />
                    </div>
                </div>
            </div>
            <div class="col-md-12" ng-class="{ 'has-error' : Sponsorregform.UserName.$error.required && !Sponsorregform.UserName.$pristine }">
                <label class="col-lg-2">User Name<span style="color: red;">*</span></label>
                <div class="col-lg-3">
                    <div class="form-group">
                        <input class="form-control" type="text" name="UserName" ng-minlength="2" maxlength="8" ng-model="SponsorInfo.UserName" ng-blur="validateUserName(SponsorInfo.UserName)" placeholder="User Name" characters-only required />
                    </div>
                </div>
                <div class="col-lg-3">
                    <span style="color: red;" ng-show="invalidUsername" ng-model="invalidUsername">User Name Already Exist</span>
                </div>
            </div>
            <div class="col-md-12" ng-class="{ 'has-error' : Sponsorregform.Password.$error.required && !Sponsorregform.Password.$pristine }">
                <label class="col-lg-2">Password<span style="color: red;">*</span></label>
                <div class="col-lg-3">
                    <div class="form-group">
                        <input class="form-control" type="password" name="Password" ng-minlength="6" ng-maxlength="6" ng-model="SponsorInfo.Password" ng-blur="validatePassword(SponsorInfo.Password)" placeholder="Password" required />
                    </div>
                </div>
                <div class="col-lg-3">
                    <span style="color: red;" ng-show="invalidpassword" ng-model="invalidpassword">Password must be min. 6 characters length</span>
                </div>
            </div>
            <div class="col-lg-12">
                <label class="col-lg-2">Email<span style="color: red;">*</span></label>
                <div class="col-lg-3" ng-class="{ 'has-error' : Sponsorregform.SponsorEmail.$error.required && !Sponsorregform.SponsorEmail.$pristine }">
                    <div class="form-group">
                        <input type="text" class="form-control" name="SponsorEmail" ng-model="SponsorInfo.SponsorEmail" placeholder="Email" ng-blur="validateEmail(SponsorInfo.SponsorEmail)" required />
                    </div>
                </div>
                <div class="col-lg-3">
                    <span style="color: red;" ng-show="invalidEmail" ng-model="invalidEmail">Invalid Email Id</span>
                </div>
            </div>
            <div class="col-lg-12">
                <label class="col-lg-2">Telephone<span style="color: red;">*</span></label>
                <div class="col-lg-3" ng-class="{ 'has-error' : Sponsorregform.Phone.$error.required && !Sponsorregform.Phone.$pristine }">
                    <div class="form-group">
                        <input class="form-control" type="text" name="Phone" ng-minlength="10" ng-maxlength="10" ng-model="SponsorInfo.Phone" ng-blur="validateTelephone(SponsorInfo.Phone)" placeholder="Telephone" numbers-only required />
                    </div>
                    <div class="col-lg-3">
                        <span style="color: red;" ng-show="invalidPhone" ng-model="invalidPhone">Telephone must be 10 characters length</span>
                    </div>
                </div>
                <label class="col-lg-2">Alternate Telephone<span style="color: red;">*</span></label>
                <div class="col-lg-3" ng-class="{ 'has-error' : Sponsorregform.AlternatePhone.$error.required && !Sponsorregform.AlternatePhone.$pristine }">
                    <div class="form-group">
                        <input type="text" class="form-control" name="AlternatePhone" ng-minlength="10" ng-maxlength="10" ng-model="SponsorInfo.AlternatePhone" ng-blur="validateAlternateTelephone(SponsorInfo.AlternatePhone)" placeholder="Alternate Telephone" numbers-only required />
                    </div>
                </div>
                <div class="col-lg-3">
                    <span style="color: red;" ng-show="invalidAlternatephone" ng-model="invalidAlternatephone">Telephone must be 10 characters length</span>
                </div>
            </div>
            <div class="col-lg-12" ng-class="{ 'has-error' : Sponsorregform.SponsorAddress.$error.required && !Sponsorregform.SponsorAddress.$pristine }">
                <label class="col-lg-2">Sponsor Address<span style="color: red;">*</span></label>
                <div class="col-lg-3">
                    <div class="form-group">
                        <input class="form-control" type="text" name="SponsorAddress" ng-model="SponsorInfo.SponsorAddress" placeholder="Sponsor Address" addresstype-only required />
                    </div>
                </div>
            </div>
            <div class="col-lg-12" ng-class="{ 'has-error' : Sponsorregform.City.$error.required && !Sponsorregform.City.$pristine }">
                <label class="col-lg-2">City<span style="color: red;">*</span></label>
                <div class="col-lg-3">
                    <div class="form-group">
                        <input class="form-control" type="text" name="City" ng-model="SponsorInfo.City" placeholder="City" characters-only required />
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <label class="col-lg-2">
                    State<span style="color: red;">*</span>
                </label>
                <div class="col-lg-3" ng-class="{ 'has-error' : Sponsorregform.State.$error.required && !Sponsorregform.State.$pristine }">
                    <div class="form-group">
                        <select class="form-control" name="State" data-ng-model="SponsorInfo.State" ng-options="S.StateId as S.StateName for S in StateList | orderBy:'StateName'" required>
                            <option value="">Select State</option>
                        </select>
                    </div>
                </div>
                <label class="col-lg-2">Zip Code<span style="color: red;">*</span></label>
                <div class="col-lg-3" ng-class="{ 'has-error' : Sponsorregform.Zip.$error.required && !Sponsorregform.Zip.$pristine }">
                    <div class="form-group">
                        <input class="form-control" type="text" name="Zip" ng-minlength="6" ng-maxlength="6" ng-model="SponsorInfo.Zip" ng-blur="validateZipcode(SponsorInfo.Zip)" placeholder="Zip Code" numbers-only required />
                    </div>
                </div>
                <div class="col-lg-3">
                    <span style="color: red;" ng-show="invalidzipcode" ng-model="invalidzipcode">Zipcode must be 6 characters length</span>
                </div>
            </div>
            <div class="col-lg-12">
                <label class="col-lg-2">Website<span style="color: red;">*</span></label>
                <div class="col-lg-3" ng-class="{ 'has-error' : Sponsorregform.BusinessWebsite.$error.required && !Sponsorregform.BusinessWebsite.$pristine }">
                    <div class="form-group">
                        <input type="text" class="form-control" name="BusinessWebsite" ng-model="SponsorInfo.BusinessWebsite" placeholder="Website" http-prefix />
                        <p><b>Hint:</b>http://www.xyz.com</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <label class="col-lg-2">Fax<span style="color: red;"></span></label>
                <div class="col-lg-3">
                    <div class="form-group">
                        <input type="text" class="form-control" name="Fax" ng-model="SponsorInfo.Fax" placeholder="Fax" />
                    </div>
                </div>
            </div>

            <input type="button" ng-click="saveRegistrationData(SponsorInfo)" ng-disabled="Sponsorregform.$invalid" value="Save" />
            <input type="button" value="Cancel" />
            <div class="col-lg-12">
                <div class="alert alert-danger fade in" ng-show="showError">
                    <a href="javascript:;" class="close closeError" data-dismiss="alert">&times;</a>
                    <strong>Error!</strong> <span data-ng-bind="errorMsg"></span>
                </div>
                <div class="alert alert-success fade in" ng-show="showSuccess">
                    <a href="javascript:;" class="close closeError" data-dismiss="alert">&times;</a>
                    <strong>Success !</strong> <span data-ng-bind="successMsg"></span>
                </div>
            </div>
        </form>
    </div>

</body>
</html>


