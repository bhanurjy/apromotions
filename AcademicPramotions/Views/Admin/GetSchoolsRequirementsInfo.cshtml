@using AcademicPramotions.DataModels
@model IEnumerable<AcademicPramotions.DataModels.SchoolInfo>
@using GridMvc.Html
@{
    ViewBag.Title = "GetSchoolsRequirementsInfo";
    Layout = "~/Views/Shared/login_Layout.cshtml";
}
<style>  
table#t01 {  
width: 100%;  
background-color: #f1f1c1;  
}  
  
table#t01 tr:nth-child(even) {  
background-color: #eee;  
}  
table#t01 tr:nth-child(odd) {  
background-color: #fff;  
}  
table#t01 th {  
color: white;  
background-color:gray;  
}  
table, th, td {  
border: 1px solid black;  
}  
table, th, td {  
border: 1px solid black;  
border-collapse: collapse;  
}  
table, th, td {  
border: 1px solid black;  
border-collapse: collapse;  
}  
th, td {  
padding: 5px;  
}  
</style>
<div>
    <table id="t01">
        <thead>
            <th>School Name</th>
            <th>City</th>
            <th>Telephone</th>
            <th>Email</th>
        </thead>
        @foreach (var item in Model)
        {  
            <tr>
                <td><a href="@Url.Action("GetSchoolRequiremetsbyId", "Admin", new { schoolId = item.SchoolInfoId })">@item.SchoolName</a></td>
                <td>@item.City</td>
                <td>@item.Telephone</td>
                <td>@item.Email</td>
            </tr>  
        }
    </table>
</div>