@using AcademicPramotions.ViewModels
@model IEnumerable<AcademicPramotions.ViewModels.SchoolRequirementsVM>
@{
    ViewBag.Title = "GetSchoolRequiremetsbyId";
    Layout = "~/Views/Shared/login_Layout.cshtml";
}
<style>  
table#t01 {  
width: 100%;  
background-color: #f1f1c1;  
}  
  
table#t01 tr:nth-child(even) {  
background-color: #eee;  
}  
table#t01 tr:nth-child(odd) {  
background-color: #fff;  
}  
table#t01 th {  
color: white;  
background-color:gray;  
}  
table, th, td {  
border: 1px solid black;  
}  
table, th, td {  
border: 1px solid black;  
border-collapse: collapse;  
}  
table, th, td {  
border: 1px solid black;  
border-collapse: collapse;  
}  
th, td {  
padding: 5px;  
}  
</style>
@if(Model.Count() != 0){
<h3>@Model.FirstOrDefault().SchoolName Details</h3>
<div>
    <table id="t01">
        <thead>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Created Date</th>
        </thead>
        @foreach (var item in Model)
        {  
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.CreatedDate</td>
            </tr>  
        }
    </table>
</div>
}
else{
    <h3>No records to display</h3>
}
<b>@Html.ActionLink("Back to Schools List", "GetSchoolsRequirementsInfo", "Admin")</b>