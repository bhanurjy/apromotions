@model List<AcademicPramotions.ViewModels.SchoolInfoVM>
@using GridMvc.Html
@{
    ViewBag.Title = "GetUnapprovedSchoolInfo";
    Layout = "~/Views/Shared/login_Layout.cshtml";
}
<div class="clear-both" style="" ng-controller="AdminCtrl">
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
            </div>
        </div>
        @*<div class="grid-wrap clearfix ng-scope">
            @Html.Grid(Model).Columns(columns =>
